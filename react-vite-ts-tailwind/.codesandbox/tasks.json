{
    "$schema": "https://codesandbox.io/schemas/tasks.json",
    "setupTasks": [
        {
            "name": "Installing Dependencies",
            "command": "npm install"
        }
    ],
    "tasks": {
        "dev-server": {
            "name": "Start Dev Server",
            "command": "npm run dev",
            "preview": {
                "port": 5173
            }
        },
        "build-app": {
            "name": "Build Application Bundle",
            "command": "npm run build",
            "runAtStart": false
        },
        "preview-build": {
            "name": "Preview Application Bundle",
            "command": "npm run preview",
            "runAtStart": false
        }
    }
}
